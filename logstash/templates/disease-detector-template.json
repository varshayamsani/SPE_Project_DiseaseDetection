{
  "index_patterns": ["disease-detector-logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    },
    "mappings": {
      "dynamic": true,
      "properties": {
        "@timestamp": { "type": "date" },
        "timestamp":   { "type": "date" },
        "level":       { "type": "keyword" },
        "hostname":    { "type": "keyword" },
        "patient_id":  { "type": "keyword" },
        "disease":     { "type": "keyword" },
        "message":     { "type": "text" }
      }
    }
  }
}

